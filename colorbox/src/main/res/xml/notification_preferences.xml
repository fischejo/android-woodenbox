<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <CheckBoxPreference
        android:key="notification_check"
        android:title="@string/settings_notification_check_title"
        android:summary="@string/settings_notification_check_summary"
        android:defaultValue="false" />

    <de.pecheur.colorbox.settings.TimePreference
        android:dependency="notification_check"
        android:key="notification_time"
        android:title="@string/settings_notification_time_title"
        android:summary="@string/settings_notification_time_summary"
        android:defaultValue="64800000"/>
</PreferenceScreen>